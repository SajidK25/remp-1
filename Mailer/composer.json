{
    "name": "remp-mailer/mail-module",
    "description": "REMP Mailer",
    "type": "project",
    "license": ["MIT"],
    "config": {
        "sort-packages": true
    },
    "repositories": [
        {
            "type": "path",
            "url": "../Composer/*",
            "options": {
                "symlink": false
            }
        },
        {
          "type": "path",
          "url": "extensions/*",
          "options": {
            "symlink": true
          }
        }
    ],

    "require": {
        "remp/mailer-module": "@dev",
        "remp/newrelic-module": "@dev"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.11",
        "mockery/mockery": "^1.5",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-nette": "^0.12.10",
        "phpunit/phpunit": "^9.4",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.2",
        "symfony/var-dumper": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "Remp\\Mailer\\": "app/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
