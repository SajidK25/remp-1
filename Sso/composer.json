{
    "name": "remp/sso",
    "description": "REMP SSO",
    "keywords": [
        "remp",
        "sso"
    ],
    "license": "MIT",
    "type": "project",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../Composer/laravel-sso",
            "options": {
                "symlink": false
            }
        },
        {
            "type": "path",
            "url": "../Composer/laravel-widgets",
            "options": {
                "symlink": false
            }
        },
        {
            "type": "path",
            "url": "../Composer/laravel-helpers",
            "options": {
                "symlink": false
            }
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "arrilot/laravel-widgets": "3.13.1",
        "deployer/deployer": "^6.8",
        "deployer/recipes": "^6.2",
        "fideloper/proxy": "^4.4",
        "fzaninotto/faker": "~1.9",
        "kouz/laravel-airbrake": "^0.7",
        "laracasts/flash": "^3.2",
        "laravel/framework": "^7.29",
        "laravel/socialite": "^5.2",
        "laminas/laminas-diactoros": "^2.5",
        "laravelcollective/html": "^6.2",
        "league/uri": "^5.3",
        "php-amqplib/php-amqplib": "^2.12",
        "predis/predis": "^1.1",
        "recca0120/laravel-tracy": "^1.13",
        "remp/laravel-helpers": "*",
        "remp/laravel-sso": "*",
        "remp/laravel-widgets": "*",
        "sentry/sentry-laravel": "^2.5",
        "symfony/psr-http-message-bridge": "^1.0",
        "tymon/jwt-auth": "^1.0",
        "ukfast/laravel-health-check": "^1.5",
        "yajra/laravel-datatables-oracle": "^9.18",
        "laravel/tinker": "^2.5",
        "fruitcake/laravel-cors": "^2.0",
        "guzzlehttp/guzzle": "^6.3.1|^7.0.1"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.8",
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.4",
        "nunomaduro/collision": "^4.3",
        "phpunit/phpunit": "9.3.11",
        "facade/ignition": "^2.0",
        "fakerphp/faker": "^1.9.1",
        "filp/whoops": "^2.12",
        "beyondcode/laravel-dump-server": "^1.7"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
